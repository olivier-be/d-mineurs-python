for ligne in range(19):
    for colonne in range(10):
        if ligne == xmin1 and colonne == ymin1 or ligne == xmin2 and colonne == ymin2 or ligne == xmin3 and colonne == ymin3 or ligne == xmin4 and colonne == ymin4:
            tab[i]=Button(fenetre, text="mine?", command=minetoucher).grid(row=ligne, column=colonne)
            tabnb[i][0]=ligne
            tabnb[i][1]=colonne
            tabm[i]=1
        elif ligne == xmin1 - 1 or ligne == xmin1 + 1 and colonne == ymin1 - 1 or colonne == ymin1 + 1 and ligne == xmin2 - 1 or ligne == xmin2 + 1 and colonne == ymin2 - 1 or colonne == ymin2 + 1:
            tab[i]=Button(fenetre, text="mine?").grid(row=ligne, column=colonne)
            tabnb[i][0] = ligne
            tabnb[i][1] = colonne
        elif ligne == xmin3 - 1 or ligne == xmin3 + 1 and colonne == ymin3 - 1 or colonne == ymin3 + 1 and ligne == xmin4 - 1 or ligne == xmin4 + 1 and colonne == ymin4 - 1 or colonne == ymin4 + 1:
            tab[i]=Button(fenetre, text="mine?").grid(row=ligne, column=colonne)
            tabnb[i][0] = ligne
            tabnb[i][1] = colonne
        else:
            tab[i]=Button(fenetre, text="mine?",command=disparait).grid(row=ligne,column=colonne )
    i=i+1
    z=z+1

    nb += 1
window.mainloop()
fenetre.mainloop()

